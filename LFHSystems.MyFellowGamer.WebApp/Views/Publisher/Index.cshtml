@model LFHSystems.MyFellowGamer.WebApp.Models.PublisherViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Publisher</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        @*<form asp-action="Create" data-ajax-success="success">*@
        <form asp-action="Create" method="post" data-ajax="true" data-ajax-success="success">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublisherName" class="control-label"></label>
                <input asp-for="PublisherName" class="form-control" />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnCreatePublisher" type="submit" value="Add Publisher" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/node_modules/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>

    <script>
        success = function (xhr) {
            /*alert(`Status: {xhr.status}, Status Text: {xhr.statusText}`);*/
            debugger;
            Swal.fire(
                'Good job!',
                'You created a new Publisher!',
                'success'
            )
        };
    </script>
}

